{
  "compilerOptions": {
    "strict": false,
    "noUnusedLocals": true,
    "rootDir": ".",
    "removeComments": true,
    "outDir": "../dist",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noEmitHelpers": false,
    "noImplicitAny": false,
    "declaration": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": ["es2015", "dom"],
    "typeRoots": [ "./node_modules/@types" ]
  },
  "files": [
    "./index.ts"
  ],
  "include": ["**/*"],
  "exclude": [
    "**/node_modules",
    "../node_modules",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit" : false,
    "skipTemplateCodegen" : true
  }
}