{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "jasmine",
      "node"
    ],
    "declaration": true,
    "rootDir": ".",
    "outDir": "../dist"
  },
  "exclude": [
    "node_modules",
    "example",
    "src/specs"
  ],
  "angularCompilerOptions": {
    "genDir": "../aot",
    "skipMetadataEmit" : false,
    "skipTemplateCodegen" : true,
    "entryModule": "app.module#AppModule"
  }
}