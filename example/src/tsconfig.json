{
  "compilerOptions": {
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "noImplicitAny": false,
    "typeRoots": [ "./node_modules/@types" ],
    "types": ["node"],
    "outDir": "../www",

    "target": "es2015",
    "module": "esnext",
    "importHelpers": true,
    "lib": ["es2018", "dom"]

  },
  "files":[
    "index.ts",
    "typings.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}